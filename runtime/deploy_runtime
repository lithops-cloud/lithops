#!/usr/bin/env python3
import os
import click
from pywren_ibm_cloud.runtime.deployutil import create_zip_action, create_blackbox_runtime, extract_modules, clone_runtime, default


@click.group(invoke_without_command=True)
@click.pass_context
def cli(ctx):
    if ctx.invoked_subcommand is None:
        default()


@cli.command('create')
@click.argument('image_name')
def create(image_name):

    print('Creating a new docker image from the Dockerfile')
    print('Docker image name: {}'.format(image_name))

    cmd = 'docker build -t {} .'.format(image_name)
    res = os.system(cmd)
    if res != 0:
        exit()

    cmd = 'docker push {}'.format(image_name)
    res = os.system(cmd)
    if res != 0:
        exit()

    create_zip_action()
    create_blackbox_runtime(image_name)
    extract_modules(image_name)

    print('All done!')


@cli.command('clone')
@click.argument('image_name')
def clone(image_name):
    clone_runtime(image_name)


@cli.command('update')
@click.argument('image_name')
def update(image_name):
    print('Updating runtime {}'.format(image_name))
    create_zip_action()
    create_blackbox_runtime(image_name)

if __name__ == "__main__":
    cli()
